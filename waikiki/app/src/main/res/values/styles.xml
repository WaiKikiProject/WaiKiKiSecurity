<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="sign_in_edittext">
        <item name="android:textColorHint">@color/color_555555</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">@color/color_222222</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="sign_in_textview">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/color_111111</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="sign_in_button">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="splash" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@layout/activity_splash</item>
    </style>


</resources>
